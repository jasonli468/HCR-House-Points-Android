<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QrCodeDisplay">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pointTypeDescriptionLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_bottom"
                android:paddingBottom="5dp"
                android:text="Point Label"
                android:textAlignment="center" />


            <ImageView
                android:id="@+id/qrCodeImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bag" />

            <TextView
                android:id="@+id/pointLogDescriptionLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:paddingBottom="5dp"
                android:text="Description"
                android:textAlignment="center" />

            <Button
                android:id="@+id/saveToPhotosButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save To Photos" />

            <Switch
                android:id="@+id/isEnabledSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Enabled: " />

            <Switch
                android:id="@+id/isArchivedSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/border_bottom"
                android:paddingBottom="5dp"
                android:text="Archived: " />

            <Button
                android:id="@+id/ios_url"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:background="@drawable/border_bottom"
                android:paddingBottom="5dp"
                android:text="Click to copy iOS Link"
                android:textAlignment="center" />

            <Button
                android:id="@+id/android_url"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_weight="1"
                android:background="@drawable/border_bottom"
                android:paddingBottom="5dp"
                android:text="Click to copy Android Link"
                android:textAlignment="center" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>